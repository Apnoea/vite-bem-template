mixin ui-radio(id, data, mods)
  -
    var baseName = 'ui-radio';
    var allMods = '';
      if(typeof(mods) !== 'undefined' && mods) {
        var modsList = mods.split(',');
        for (var i = 0; i < modsList.length; i++) {
          if (modsList[i].trim()[0] == '-') {
            allMods = allMods + baseName + modsList[i].trim() + ' ';
          } else {
            allMods = allMods + modsList[i].trim() + '__' + baseName + ' ';
          }
        }
      }

  .ui-radio(class=allMods)
    input(id=id name=id type='radio')&attributes(attributes)
    label(for=id)
      if data
        if data.p3
          +ui-p3(data.p3, data.p3mods)
      block
