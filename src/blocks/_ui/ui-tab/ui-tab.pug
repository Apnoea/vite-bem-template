mixin ui-tab-head(data, mods)
  -
    const allMods = mods ? mods.split(',').map(mod => mod.trim()[0] === '-' ? `ui-tab-head${mod.trim()}` : `${mod.trim()}__ui-tab-head`).join(' ').trim() : ''

  .ui-tab-head(class=allMods)&attributes(attributes)
    each item, index in data
      .ui-tab-head__item(class=item.mods class=(index === 0 ? 'ui-tab-head__item--active' : ''))
        if item.p2
          +ui-p2(item.p2, item.p2mods)
        if item.p3
          +ui-p3(item.p3, item.p3mods)
        if item.p4
          +ui-p4(item.p4, item.p4mods)
        if item.p5
          +ui-p5(item.p5, item.p5mods)
        if item.p6
          +ui-p6(item.p6, item.p6mods)
    block

