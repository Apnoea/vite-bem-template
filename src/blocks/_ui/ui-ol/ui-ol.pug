mixin ui-ol(data, mods)
  -
    const allMods = mods ? mods.split(',').map(mod => mod.trim()[0] === '-' ? `ui-ol${mod.trim()}` : `${mod.trim()}__ui-ol`).join(' ').trim() : ''

  ol.ui-ol(class=allMods)&attributes(attributes)
    if data
      each item in data
        if item.p2
          li
            +ui-p2(item.p2, item.p2mods)
    block
